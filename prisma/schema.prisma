datasource db {
  provider = "postgresql"
  url      = "file:./prisma.sqlite"
}

enum Role {
  user
  owner
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  role      Role     @default(user)
  price     Decimal
  size      BigInt
  bytes     Bytes
  json      Json?
  age       Int?
  count     Float
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post {
  id     String @id @default(cuid())
  title  String
  author User   @relation(fields: [userId], references: [id])
  userId Int
}
